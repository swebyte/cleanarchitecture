    <ProjectReference Include="..\..\Infrastructure\Company.CA.Data\Company.CA.Infrastructure.Data.csproj" />
  </ItemGroup>

  <ItemGroup>
    <ServiceWorker Include="wwwroot\service-worker.js" PublishedContent="wwwroot\service-worker.published.js" />
  </ItemGroup>

</Project>
